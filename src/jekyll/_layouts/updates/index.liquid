{% include page-structure/open-page.liquid %}

<div class="wf-subheading">
  <div class="page-content">
    <h2>Be smarter. Do more.</h2>
    <p class="mdl-typography--font-light">
      Discover the latest API's coming to the Web Platform, find out what the Chrome team are working on and check out the latest features in DevTools.
    </p>
  </div>
</div>

{% include page-structure/site-promo-banner.liquid %}

<div class="page-content">
  <div class="mdl-grid">
    {% for article in page.updates %}
      {% assign authorKey = article.authors[0] %}
      {% assign author = site.data["contributors"][authorKey] %}
      {% include updates/card.liquid title=article.title text=article.description author=author date=article.updated_on imgUrl=article.featured_image linkHref=article.canonical_url %}
    {% endfor %}
  </div>
</div>

{% include page-structure/article-nav.liquid %}

{% include page-structure/close-page.liquid %}
