<meta name="theme-color" content="#ff5722">
{% elsif page.filepath contains "layouts" %}
<meta name="theme-color" content="#297ea8">
{% elsif page.filepath contains "input" %}
<meta name="theme-color" content="#ff0000">
{% elsif page.filepath contains "look-and-feel" %}
<meta name="theme-color" content="#404040">
{% elsif page.filepath contains "media" %}
<meta name="theme-color" content="#cf423a">
{% elsif page.filepath contains "monetization" %}
<meta name="theme-color" content="#056f00">
{% elsif page.filepath contains "device-access" %}
<meta name="theme-color" content="#28a8a8">
{% elsif page.filepath contains "performance" %}
<meta name="theme-color" content="#7b5294">
{% elsif page.filepath contains "tools" %}
<meta name="theme-color" content="#cf3a8c">
{% elsif page.filepath contains "discovery-and-distribution" %}
<meta name="theme-color" content="#3f51b5">
{% elsif page.filepath contains "input" %}
<meta name="theme-color" content="#2c8566">
{% else %}
<meta name="theme-color" content="#4285f4">
{% endif %}

<link rel="stylesheet" media="screen" href="{{site.baseurl}}/css/styles.min.css" />
