{% if site.include_open_html %}
<meta charset="utf-8" />
{% endif %}

{% capture page_title %}{% if page.id != "home" %}{{ page.title }} — Web Fundamentals{%else%}Web Fundamentals — Google Developers{%endif%}{% endcapture %}
<title>{{ page_title }}</title>

{% if page.rel.gplusauthor %}
<meta name="author" content="{{ page.rel.gplusauthor }}" />
{% endif %}

{% if page.description %}
<meta name="description" content="{{ page.description }}" />
{% else %}
<meta name="description" content="Google Web Fundamentals" />
{% endif %}

<link rel="icon" href="{{site.baseurl}}/favicon.ico" />

<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta id="viewport" name="viewport" content="width=device-width, initial-scale=1" />

{% if page.thumbnail %}<meta name="twitter:card" content="summary_large_image">{% else %}<meta name="twitter:card" content="summary">{% endif %}
<meta property="twitter:account_id" content="@chromiumdev" />
<meta property="twitter:site" content="@chromiumdev" />
<meta property="twitter:description" content="{{page.description}}" />
{% if page.rel.twitterauthor %}<meta property="twitter:creator" content="{{ page.rel.twitterauthor }}" />{% else %}<meta property="twitter:creator" content="@chromiumdev" />{% endif%}
{% if page.thumbnail %}<meta name="twitter:image:src" content="https://developers.google.com/{{site.baseurl}}{{ page.filepath }}/{{ page.thumbnail }}" />
{% else %}<meta property="twitter:image:src" content="https://developers.google.com/web/fundamentals/imgs/logo.png" />{% endif %}


{% if page.rel.gplusauthor %}<link rel="author" href="{{ page.rel.gplusauthor }}/posts">{% endif %}
<link rel="publisher" href="https://plus.google.com/+GoogleChromeDevelopers">

<meta itemprop="name" content="{{ page_title }}">
<meta itemprop="image" content="/imgs/logo.png">
<meta itemprop="description" content="{% if page.description %}{{ page.description }}{% else %}Google Web Fundamentals{% endif %}">

<meta property="og:site_name" content="Web Fundamentals" />
<meta property="og:title" content="{{ page_title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="http://developers.google.com/web/fundamentals/" />
{% if page.snippet_img %}<meta property="og:image" content="https://developers.google.com/{{site.baseurl}}{{ page.filepath }}/{{ page.thumbnail }}" />
{% else %}<meta property="og:image" content="https://developers.google.com/web/fundamentals/imgs/logo.png" />{% endif %}
<meta property="og:publisher" content="https://www.facebook.com/googlechrome" />
{% if page.rel.fbauthor %}<meta property="og:author" content="{{ page.rel.fbauthor }}" />{% endif %}

<link rel="stylesheet" media="screen" href="{{site.baseurl}}/css/styles.min.css" />
