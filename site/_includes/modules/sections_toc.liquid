<div class="container">
  <span class="article-section__icon icon-circle themed themed--background"><span>{{page.articles.[page.id].size}}</span></span>
  <span class="articles-count themed">Guides available</span>
  <ol class="articles-list">

    {% for guide in page.articles.[page.id] %}
    <li class="articles-list__item">

      <div class="g-wide--2 g--centered">
        <a href="{{site.baseurl}}{{guide.url | clean}}" title="Read the lesson {{guide.title}}">
          <h3 class="xlarge themed">{{guide.title}}</h3>
          {% if guide.thumbnail %}
          <img src="{{ guide.thumbnail }}" alt="{{ guide.title }}">
          {% endif %}
        </a>
      </div>
      <p class="g-medium--2 g-wide--3 g--centered">{{guide.description}}</p>
    </li>
    <div class="divider divider--secondary divider--short">
      <span class="divider-icon divider-icon--secondary"></span>
    </div>
    {% endfor %}

  </ol>
</div>